@page "/ListEmployess"
@using WEB.Models
@using WEB.Service
<div class="col-lg-12 control-section">
    <div class="content-wrapper">
        <div class="row">
            <SfGrid DataSource="@GridData" AllowPaging="true">
                <GridPageSettings PageCount="5"></GridPageSettings>
                <GridColumns>
                    <GridColumn Field=@nameof(Employess.Name) HeaderText="Name" Width="150"></GridColumn>
                    <GridColumn Field=@nameof(Employess.Age) HeaderText="Age" Width="100"></GridColumn>
                    <GridColumn Field=@nameof(Employess.Address) HeaderText="Address" Width="200"></GridColumn>
                </GridColumns>
            </SfGrid>
        </div>
    </div>
</div>
@code{
    [Inject] IEmployessService EmployessService  { get; set; }
     
    public List<Employess> GridData { get; set; }
    protected override async void OnInitialized()
    {
        GridData = await EmployessService.GetAllRecords();
    }
}
