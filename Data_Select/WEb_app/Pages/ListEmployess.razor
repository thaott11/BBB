@page "/listEmployess"
@using WEB_APP.Models
@using WEB_APP.Service
<div class="col-lg-12 control-section">
    <div class="content-wrapper">
        <div class="row">
            <SfGrid DataSource="@GridData" AllowPaging="true">
                <GridPageSettings PageCount="5"></GridPageSettings>
                <GridColumns>
                    <GridColumn Field=@nameof(Employess.Name) HeaderText="Order ID" TextAlign="TextAlign.Right" Width="120"></GridColumn>
                    <GridColumn Field=@nameof(Employess.Age) HeaderText="Customer ID" Width="150"></GridColumn>
                    <GridColumn Field=@nameof(Employess.Address) HeaderText="Shipped Date" Format="d" TextAlign="TextAlign.Right" Width="150"></GridColumn>
                </GridColumns>
            </SfGrid>
        </div>
    </div>
</div>
@code{
    [Inject] IEmployessService EmployessService  { get; set; }
     
    public List<Employess> GridData { get; set; }
    protected override async void OnInitialized()
    {
        GridData = await EmployessService.GetAllRecords();
    }
}
