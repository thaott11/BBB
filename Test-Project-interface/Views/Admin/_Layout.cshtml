<body class="layout-fixed sidebar-expand-lg bg-body-tertiary">
	<div class="app-wrapper d-flex">
		<!--begin::Sidebar (Moved to left)-->
		<aside class="app-sidebar bg-body-secondary shadow" data-bs-theme="dark">
			<!--begin::Sidebar Brand-->
			<div class="sidebar-brand">
				<a href="./index.html" class="brand-link">
					<img src="~/Image/Logo.png" alt="AdminLTE Logo" class="brand-image opacity-75 shadow">
					<span class="brand-text fw-light">Admin</span>
				</a>
			</div>
			<!--end::Sidebar Brand-->
			<!--begin::Sidebar Wrapper-->
			<div class="sidebar-wrapper">
				<nav class="mt-2">
					<div class="info text-end">
						<a asp-controller="AuthMiddleware" asp-action="Login" class="d-block">
							<i class="fa-solid fa-right-from-bracket"></i>
						</a>
					</div>
					<hr style="border-color: white;" />
					<!--begin::Sidebar Menu-->
					<ul class="nav sidebar-menu flex-column" data-lte-toggle="treeview" role="menu" data-accordion="false">
						<li class="nav-item">
							<a asp-controller="Admin" asp-action="Dashboard" class="nav-link">
								<i class="nav-icon bi bi-circle"></i>
								<p>Dashboard</p>
							</a>
						</li>
						<li class="nav-item">
							<a asp-controller="Admin" asp-action="User" class="nav-link">
								<i class="nav-icon bi bi-circle"></i>
								<p>User</p>
							</a>
						</li>
						<li class="nav-item">
							<a asp-action="Product" class="nav-link">
								<i class="nav-icon bi bi-circle"></i>
								<p>Product</p>
							</a>
						</li>
						<li class="nav-item">
							<a asp-controller="Admin" asp-action="Order" class="nav-link">
								<i class="nav-icon bi bi-circle"></i>
								<p>Order</p>
							</a>
						</li>
						<li class="nav-item">
							<a asp-controller="Category" asp-action="CategoryList" class="nav-link">
								<i class="nav-icon bi bi-circle"></i>
								<p>Category</p>
							</a>
						</li>
						<li class="nav-item">
							<a asp-controller="ProductSize" asp-action="SizeList" class="nav-link">
								<i class="nav-icon bi bi-circle"></i>
								<p>Size</p>
							</a>
						</li>
					</ul>
					<!--end::Sidebar Menu-->
				</nav>
			</div>
			<!--end::Sidebar Wrapper-->
		</aside>
		<!--end::Sidebar-->
		<!--begin::App Main Content-->
		<main class="app-main">
			<div class="container">
				<main role="main" class="pb-3">
					@RenderBody()
				</main>
			</div>
		</main>
		<!--end::App Main Content-->
	</div>
</body>
<!--end::Body-->
</html>
<style>
	/* Đảm bảo sidebar nằm bên trái */
	.app-sidebar {
		float: left;
		width: 250px; /* hoặc độ rộng bạn muốn */
		position: fixed; /* để giữ cố định */
		top: 0;
		left: 0;
		height: 100%;
	}

	/* Căn chỉnh main content cho đúng */
	.app-main {
		margin-left: 250px; /* tương ứng với độ rộng sidebar */
	}

</style>